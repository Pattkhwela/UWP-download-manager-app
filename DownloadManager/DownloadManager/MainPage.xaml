<Page
    x:Class="DownloadManager.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:DownloadManager"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <CommonNavigationTransitionInfo />
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Transitions>






    <Grid Background="Gold">
        <ProgressBar
            x:Name="ProgressBar"
            VerticalAlignment="Top"
            Visibility="Collapsed" />
        <TextBlock
            x:Name="DownloadsTitle"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            FontFamily="Assets/AmaticSC-Bold.ttf#Amatic SC"
            FontSize="40"
            FontWeight="Bold"
            Text="Downloads" />
        <TextBox
            x:Name="txtLink"
            Width="360"
            Margin="0,43,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="OrangeRed"
            TextWrapping="Wrap" />
        <Button
            x:Name="DownloadButton"
            Width="135"
            Margin="115,80,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Download_Click"
            Content="Save"
            FontFamily="Assets/AmaticSC-Bold.ttf#Amatic SC"
            FontSize="20"
            FontWeight="Bold" />
        <TextBlock
            x:Name="txtDownloadCompleted"
            Margin="100,203,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="15"
            Text="Download Complete"
            TextWrapping="Wrap"
            Visibility="Collapsed" />
        <Button
            x:Name="btnOpenFile"
            Margin="100,226,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="btnOpenFile_Click"
            Content="Open File"
            Visibility="Collapsed" />
        <ListBox
            x:Name="listBox"
            Width="360"
            Height="470"
            Margin="0,120,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="OrangeRed" />





    </Grid>
    <Page.BottomAppBar>
        <CommandBar x:Name="BottomBar" Background="Gold">
            <CommandBar.PrimaryCommands>
                <AppBarButton
                    Name="btnBrowser"
                    Click="Browser_Click"
                    FontFamily="Assets/AmaticSC-Bold.ttf#Amatic SC"
                    FontWeight="Bold"
                    Icon="Globe"
                    Label="Browser" />
                <AppBarButton
                    Name="btnSetting"
                    Click="Settings_Click"
                    FontFamily="Assets/AmaticSC-Bold.ttf#Amatic SC"
                    FontWeight="Bold"
                    Icon="Setting"
                    Label="Settings" />
            </CommandBar.PrimaryCommands>

        </CommandBar>
    </Page.BottomAppBar>
</Page>
